<UserControl
    x:Class="PCShopUWPCustomer.ucUsedItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PCShopUWPCustomer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="0,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FocusVisualPrimaryBrush="{x:Null}" FontSize="18" FontWeight="Normal" Text="Date of Manufacture:"/>
        <TextBox x:Name="txtDateOfManufacture" HorizontalAlignment="Left" Margin="187,10,0,0" Text="" VerticalAlignment="Top" Width="202" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="85,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FocusVisualPrimaryBrush="{x:Null}" FontSize="18" FontWeight="Normal" Text="Condition:"/>
        <TextBox x:Name="txtCondition" HorizontalAlignment="Left" Margin="187,60,0,0" Text="" VerticalAlignment="Top" Width="204" IsReadOnly="True"/>
    </Grid>
</UserControl>
